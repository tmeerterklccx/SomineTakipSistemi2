@using Entity.Concrete
@model List<Product>
<section class="w3l-gallery" id="gallery">
    <div class="destionation-innf py-5">
        <div class="container py-lg-5 py-md-4 py-2 HomePageGallery">
            <div class="title-content text-center">

                <h3 class="title-w3l mb-5 text-center">Ürünlerimiz</h3>
                <h6 class="title-subw3hny text-center">Formu doldurmak için ürüne tıklayınız...</h6>
                <br />
                <br />
            </div>
            <!--/grids-grids-->
            <ul class="gallery_agile">
                @foreach (var item in Model)
                {
                    <li>
                        <div class="w3_agile_portfolio_grid">



                            <a href="~/Form/Index/@item.ID">
                                <img src="@item.ProductImageLink" alt=" " class="img-fluid radius-image" />
                                <div class="w3layouts_news_grid_pos">
                                    <div class="wthree_text">
                                        <h3>@item.ProductName</h3>
                                        <p>@item.ProductDescription</p>
                                    </div>
                                </div>
                            </a>

                        </div>
                    </li>
                }
            </ul>
            <!--//rids-grids-->
        </div>
    </div>
</section>