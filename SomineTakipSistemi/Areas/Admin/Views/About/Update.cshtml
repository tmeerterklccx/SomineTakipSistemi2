@model Entity.Concrete.About
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Quixlab - Bootstrap Admin Dashboard Template by Themefisher.com</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/admin/images/favicon.png">
    <!-- Custom Stylesheet -->
    <link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımda Güncelle</h4>
                <form method="post">

                    <label for="HeadText">Başlık Yazısı</label>
                    <input type="text" required name="HeadText" class="form-control" asp-for="HeadText">
                    <br />
                    <label for="Description">Açıklama Yazısı</label>
                    <input required type="text" name="Description" class="form-control" asp-for="Description">
                    <br />
                    <button type="submit" class="btn btn-primary">Kaydet</button>

                </form>
            </div>
        </div>
    </div>
</body>

</html>