@model List<Entity.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Kullanıcı Bilgileri</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı</th>
                            <th>E Mail Adresi</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td><a class="btn mb-1 btn-rounded btn-danger" href="~/Admin/About/Delete/@item.Id">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
                <a href="~/Auth/Register/" class="btn mb-1 btn-primary btn-lg">Yeni Kayıt Ekle</a>
            </div>
        </div>
    </div>
    <!-- /# card -->
</div>