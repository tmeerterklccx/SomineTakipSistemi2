<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Table Hover</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Hizmet İsmi</th>
                            <th>Hizmet Açıklaması</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <th>@item.ID</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td><a class="btn mb-1 btn-rounded btn-warning" href="~/Admin/Service/Update/@item.ID">Güncelle</a></td>
                                <td><a class="btn mb-1 btn-rounded btn-danger" href="~/Admin/Service/Delete/@item.ID">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
                <a href="~/Admin/Service/Add/" class="btn mb-1 btn-primary btn-lg">Yeni Kayıt Ekle</a>
            </div>
        </div>
    </div>
    <!-- /# card -->
</div>